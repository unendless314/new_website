---
import CollectionLayout from "@components/projects/CollectionLayout.astro";
import { getTaxaMultiset, getTaxa } from "@lib/taxonomyParser";
import { getIndex, getEntries } from "@lib/contentParser";
import { sortByDate } from "@lib/sortFunctions";
import type { ProjectsEntry } from "@/types";

const entryIndex = (await getIndex("projects")) as ProjectsEntry;
const entries = (await getEntries("projects", sortByDate)) as ProjectsEntry[];

const { slug } = Astro.params;

const entriesPerPage = 8;
const currentPageIndex = slug && !isNaN(Number(slug)) ? Number(slug) : 1;
const pageCount = Math.ceil(entries.length / entriesPerPage);
const indexOfLastEntry = currentPageIndex * entriesPerPage;
const indexOfFirstEntry = indexOfLastEntry - entriesPerPage;
const currentEntries = entries.slice(indexOfFirstEntry, indexOfLastEntry);

// Fetch categories and tags specifically for the 'projects' collection
const allCategories = await getTaxaMultiset("projects", "categories");
const categories = await getTaxa("projects", "categories");
const tags = await getTaxa("projects", "tags");
---

<CollectionLayout
  entryIndex={entryIndex}
  entries={currentEntries}
  categories={categories}
  tags={tags}
  allCategories={allCategories}
  pageIndex={currentPageIndex}
  pageCount={pageCount}
  collection="projects"
/>