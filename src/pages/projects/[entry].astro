---
import type { ProjectsEntry } from "@/types";
import EntryLayout from "@components/news/EntryLayout.astro";
import { getEntries } from "@lib/contentParser";
import { sortByTitle } from "@lib/sortFunctions";

export async function getStaticPaths() {
  const entries = await getEntries("projects", sortByTitle) as ProjectsEntry[];
  const paths = entries.map((entry) => ({
    params: {
      entry: entry.id,
    },
    props: { entry, entries },
  }));
  return paths;
}

const { entry, entries } = Astro.props;
const relatedEntries = entries.filter((item: ProjectsEntry) => item.id !== entry.id).slice(0, 2);
---

<EntryLayout entry={entry} relatedEntries={relatedEntries} collection="projects" />
