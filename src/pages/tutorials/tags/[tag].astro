---
import TaxonLayout from "@components/tutorials/TaxonLayout.astro";
import { getTaxa } from "@lib/taxonomyParser";
import { getEntries } from "@lib/contentParser";
import { sortByDate } from "@lib/sortFunctions";
import { slugify } from "@lib/textConverter";

export async function getStaticPaths() {
  const collection = "tutorials";
  const taxonomy = "tags";
  const tags = await getTaxa(collection, taxonomy);
  
  return tags.map((tag) => {
    return {
      params: { tag: slugify(tag) },
    };
  });
}

const { tag } = Astro.params;
const entries = await getEntries("tutorials", sortByDate);
const posts = entries.filter((item: any) => {
  const tags = item.data.tags?.map((t: string) => slugify(t)) || [];
  return tags.includes(tag);
});
---

<TaxonLayout taxonomy="tags" taxon={tag} entries={posts} collection="tutorials" />
