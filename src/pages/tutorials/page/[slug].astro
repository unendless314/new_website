---
import CollectionLayout from "@components/tutorials/CollectionLayout.astro";
import { getTaxaMultiset, getTaxa } from "@lib/taxonomyParser";
import { getEntries, getIndex } from "@lib/contentParser";
import { sortByDate } from "@lib/sortFunctions";
import type { TutorialsEntry } from "@/types";

const { slug } = Astro.params;
const entryIndex = (await getIndex("tutorials")) as TutorialsEntry;
const entries = (await getEntries("tutorials", sortByDate)) as TutorialsEntry[];
const allCategories = await getTaxaMultiset("tutorials", "categories");
const categories = await getTaxa("tutorials", "categories");
const tags = await getTaxa("tutorials", "tags");

const entriesPerPage = 8;
const currentPageIndex = slug && !isNaN(Number(slug)) ? Number(slug) : 1;
const pageCount = Math.ceil(entries.length / entriesPerPage);
const indexOfLastEntry = currentPageIndex * entriesPerPage;
const indexOfFirstEntry = indexOfLastEntry - entriesPerPage;
const currentEntries = entries.slice(indexOfFirstEntry, indexOfLastEntry);

export async function getStaticPaths() {
  const entriesPerPage = 8;
  const entries = (await getEntries("tutorials", sortByDate)) as TutorialsEntry[];
  const pageCount = Math.ceil(entries.length / entriesPerPage);
  const paths = [];

  for (let i = 1; i < pageCount; i++) {
    paths.push({
      params: {
        slug: (i + 1).toString(),
      },
    });
  }
  return paths;
}
---

<CollectionLayout
  entryIndex={entryIndex}
  entries={currentEntries}
  categories={categories}
  tags={tags}
  allCategories={allCategories}
  pageIndex={currentPageIndex}
  pageCount={pageCount}
  collection="tutorials"
/>
